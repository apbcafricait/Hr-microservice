model Dependent {
  id           String    @id @default(uuid())
  employeeId   Int
  name         String
  relationship String
  dateOfBirth  DateTime
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  
  // Relations
  employee     Employee  @relation(fields: [employeeId], references: [id])
}